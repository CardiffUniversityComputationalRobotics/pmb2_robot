<launch>
  <arg name="robot" default="full"/>
  <arg name="have_base_rgbd" default="true"/>

  <!-- Robot description -->
  <param name="robot_description" command="$(find xacro)/xacro.py '$(find pmb2_description)/robots/pmb2_$(arg robot).urdf.xacro' have_base_rgbd:=$(arg have_base_rgbd)" />

  <!-- Joint limits -->
  <rosparam command="load" file="$(find pmb2_description)/config/joint_limits.yaml"/>
</launch>
